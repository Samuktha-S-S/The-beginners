    window.addEventListener('DOMContentLoaded', () => {
      // Update date and time
      function updateDateTime() {
        const now = new Date();
        const date = now.toLocaleDateString();
        const time = now.toLocaleTimeString();
        const day = now.toLocaleDateString(undefined, { weekday: 'long' });
        document.getElementById('currentDate').textContent = `Date: ${date} (${day})`;
        document.getElementById('currentTime').textContent = `Time: ${time}`;
      }
      setInterval(updateDateTime, 1000);
      updateDateTime();

      // Display random quote
      const quotes = [
        { quote: "Believe you can and you're halfway there.", author: "Theodore Roosevelt" },
        { quote: "Push yourself, because no one else is going to do it for you.", author: "Unknown" },
        { quote: "Success doesn‚Äôt just find you. You have to go out and get it.", author: "Unknown" },
        { quote: "Dream it. Wish it. Do it.", author: "Unknown" }
      ];
      const randomQuote = quotes[Math.floor(Math.random() * quotes.length)];
      document.getElementById('quote').innerHTML = `${randomQuote.quote}<div class="quote-author"> ‚Äî ${randomQuote.author}</div>`;
    });

    function fetchStudentData() {
      const regNo = document.getElementById("reg_no").value;
      if (regNo) {
        alert("Fetching data for Reg No: " + regNo);
      } else {
        alert("Please enter a valid Registration Number.");
      }
    }
